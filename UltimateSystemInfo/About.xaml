<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="UltimateSystemInfo.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Padding="25">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock FontSize="36" Text="UltimateSystemInfo" Foreground="{StaticResource AccentAAFillColorDefaultBrush}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="16" IsTextSelectionEnabled="True" x:Name="CompileDateText">Compilation date: March 9, 2025</TextBlock>
                    <TextBlock FontSize="16" IsTextSelectionEnabled="True">©️ 2025 jpb, contributors</TextBlock>
                    <TextBlock IsTextSelectionEnabled="True">Licensed under the <Bold>MIT License</Bold></TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
